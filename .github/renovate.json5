{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "automerge": true,
  "github-actions": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchFileNames": [".github/workflows/continuous-integration.yml"],
      "enabled": true
    }
  ],
  "nix": {
    "enabled": true,
    "lockFileMaintenance": {
      "enabled": true,
      "commitMessageAction": "update",
      "commitMessageTopic": "Nix flake lock"
    }
  }
}
